@require './config'

.arrow
  display inline-block
  width 0
  height 0



  &.up
    display inline-block
    width 8px
    height 8px
    border-color $arrowBgColor
    border-width 0 0 2px 2px
    border-style solid
    transform rotateZ(135deg)
    margin -5px 0 0 0
  &.down
    display inline-block
    width 8px
    height 8px
    border-color $arrowBgColor
    border-width 0 0 2px 2px
    border-style solid
    transform rotateZ(-45deg)
    margin -5px 0 0 0
  &.right
    display inline-block
    width 8px
    height 8px
    border-color $arrowBgColor
    border-width 0 0 2px 2px
    border-style solid
    transform rotateZ(225deg)
    margin -5px 0 0 0
  &.left
    display inline-block
    width 8px
    height 8px
    border-color $arrowBgColor
    border-width 0 0 2px 2px
    border-style solid
    transform rotateZ(45deg)
    margin -5px 0 0 0


